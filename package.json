{
  "name": "pam-css",
  "description": "PAM is a light, modular and flexible AMCSS library.",
  "version": "1.0.0-beta.1",
  "keywords": [
    "css",
    "less",
    "amcss",
    "styling",
    "ui",
    "web"
  ],
  "homepage": "https://mrgreentech.github.io/pam/",
  "author": "MRG Gametek",
  "contributors": [
    "The PAM Contributors (https://github.com/mrgreentech/pam/graphs/contributors)"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrgreentech/pam.git"
  },
  "bugs": {
    "url": "https://github.com/mrgreentech/pam/issues"
  },
  "license": "BSD-3-Clause-Attribution",
  "scripts": {
    "build": "npm run lint && gulp build && npm run build:styleguide && gulp size-report",
    "build:styleguide": "npm run styleguide && gulp replace-version",
    "build:watch": "npm run lint && gulp build-dev && npm run build:styleguide",
    "deploy:styleguide": "git subtree push --prefix build/styleguide origin gh-pages",
    "dev": "npm-run-all build --parallel serve watch:*",
    "dist": "npm run build && gulp copy-dist",
    "lint:css": "stylelint src/less/**/*.less",
    "lint:js": "eslint src/**/*.js",
    "lint": "npm run lint:css && npm run lint:js",
    "serve": "browser-sync start --config bs-config.js",
    "styleguide": "kss --config kss-config.json",
    "test": "npm run build",
    "watch:css": "onchange src/**/*.* -- npm run build:watch",
    "stylelint:check": "stylelint-config-prettier-check",
    "eslint:check": "eslint --print-config . | eslint-config-prettier-check"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "browser-sync": "^2.26.3",
    "del": "^3.0.0",
    "eslint": "^5.7.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-compat": "^2.6.2",
    "gulp": "^3.9.1",
    "gulp-babel": "^8.0.0",
    "gulp-banner": "^0.1.3",
    "gulp-clean-css": "^3.10.0",
    "gulp-concat": "^2.6.1",
    "gulp-gzip": "^1.4.2",
    "gulp-less": "^4.0.1",
    "gulp-load-plugins": "^1.5.0",
    "gulp-rename": "^1.4.0",
    "gulp-replace": "^1.0.0",
    "gulp-sizereport": "^1.2.1",
    "gulp-util": "^3.0.8",
    "husky": "^1.1.2",
    "kss": "^3.0.0-beta.23",
    "less-plugin-autoprefix": "^2.0.0",
    "lint-staged": "^7.3.0",
    "normalize.css": "^8.0.0",
    "npm-run-all": "^4.1.3",
    "onchange": "^5.0.2",
    "prettier": "1.14.3",
    "run-sequence": "^2.2.1",
    "stylelint": "^9.6.0",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-no-unsupported-browser-features": "^3.0.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "lint-staged": {
    "*.{js,less}": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 Chrome major versions",
    "last 2 Firefox major versions",
    "last 2 Edge major versions",
    "last 2 Safari major versions",
    "ie >= 11",
    "last 2 Android major versions",
    "last 2 ChromeAndroid major versions",
    "last 3 iOS major versions",
    "not op_mini all"
  ]
}
