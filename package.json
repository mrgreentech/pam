{
  "name": "pam",
  "description": "PAM is a light, modular and flexible AMCSS library.",
  "version": "1.0.0",
  "keywords": [
    "css",
    "less",
    "amcss",
    "styling",
    "ui",
    "web"
  ],
  "homepage": "https://mrgreentech.github.io/pam/",
  "author": "The PAM Authors (https://github.com/mrgreentech/pam/graphs/contributors)",
  "contributors": [
    "Mr Green & Co Technology"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrgreentech/pam.git"
  },
  "bugs": {
    "url": "https://github.com/mrgreentech/pam/issues"
  },
  "license": "BSD-3-Clause-Attribution",
  "scripts": {
    "build": "npm run lint:css && grunt build && npm run build:styleguide",
    "build:styleguide": "npm run styleguide",
    "build:watch": "npm run lint:css && grunt build_bs && npm run build:styleguide",
    "lint:css": "stylelint src/less/buttons.less --syntax less",
    "serve": "browser-sync start --server build/styleguide --files build/styleguide/*.html",
    "styleguide": "kss --config kss-config.json",
    "test": "npm run lint:css",
    "watch": "npm-run-all build --parallel serve watch:*",
    "watch:css": "onchange src/**/*.* -- npm run build:watch",
    "deploy:styleguide": "git subtree push --prefix build/styleguide origin gh-pages",
    "dist": "npm run build && grunt dist"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.6",
    "bower": "^1.3.7",
    "browser-sync": "2.12.12",
    "del": "^2.2.2",
    "grunt": "^1.0.1",
    "grunt-cli": "^1.0.0",
    "grunt-contrib-clean": "^1.0.0",
    "grunt-contrib-compress": "^1.0.0",
    "grunt-contrib-concat": "^1.0.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-cssmin": "^2.0.0",
    "grunt-contrib-less": "^1.4.0",
    "grunt-postcss": "^0.8.0",
    "gulp": "^3.9.1",
    "gulp-banner": "^0.1.3",
    "gulp-clean-css": "^3.0.4",
    "gulp-concat": "^2.6.1",
    "gulp-gzip": "^1.4.0",
    "gulp-less": "^3.3.0",
    "gulp-rename": "^1.2.2",
    "gulp-sizereport": "^1.2.0",
    "gulp-util": "^3.0.8",
    "kss": "^3.0.0-beta.18",
    "less-plugin-autoprefix": "^1.5.1",
    "npm-run-all": "^4.0.2",
    "onchange": "^3.0.2",
    "postcss-less": "0.x",
    "postcss-reporter": "^3.0.0",
    "run-sequence": "^1.2.2",
    "stylelint": "^7.9.0",
    "stylelint-config-standard": "^16.0.0"
  }
}
