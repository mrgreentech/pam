{
  "name": "pam-css",
  "description": "PAM is a light, modular and flexible AMCSS library.",
  "version": "1.0.0-beta.3",
  "main": "dist/pam.min.css",
  "style": "dist/pam.min.css",
  "keywords": [
    "css",
    "less",
    "amcss",
    "styling",
    "ui",
    "web"
  ],
  "homepage": "https://mrgreentech.github.io/pam/",
  "author": "MRG Gametek",
  "contributors": [
    "The PAM Contributors (https://github.com/mrgreentech/pam/graphs/contributors)"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrgreentech/pam.git"
  },
  "bugs": {
    "url": "https://github.com/mrgreentech/pam/issues"
  },
  "license": "BSD-3-Clause-Attribution",
  "scripts": {
    "build": "gulp build",
    "deploy:styleguide": "git subtree push --prefix build/styleguide origin gh-pages",
    "dev": "gulp dev",
    "dist": "gulp dist",
    "lint:css": "gulp cssLint",
    "lint:js": "gulp jsLint",
    "lint": "npm run lint:css && npm run lint:js",
    "styleguide": "kss --config kss-config.json",
    "test": "npm run build",
    "stylelint:check": "stylelint-config-prettier-check",
    "eslint:check": "eslint --print-config . | eslint-config-prettier-check"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "browser-sync": "^2.26.7",
    "del": "^5.1.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-compat": "^3.3.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-banner": "^0.1.3",
    "gulp-clean-css": "^4.2.0",
    "gulp-concat": "^2.6.1",
    "gulp-eslint": "^6.0.0",
    "gulp-gzip": "^1.4.2",
    "gulp-less": "^4.0.1",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "^1.4.0",
    "gulp-replace": "^1.0.0",
    "gulp-sizereport": "^1.2.1",
    "gulp-stylelint": "^9.0.0",
    "husky": "^3.0.8",
    "kss": "^3.0.0-beta.25",
    "less-plugin-autoprefix": "^2.0.0",
    "less-vars-to-js": "^1.3.0",
    "lint-staged": "^9.4.1",
    "normalize.css": "^8.0.1",
    "prettier": "1.18.2",
    "stylelint": "^10.1.0",
    "stylelint-config-prettier": "^5.3.0",
    "stylelint-config-standard": "^18.3.0",
    "stylelint-no-unsupported-browser-features": "^3.0.2",
    "through2": "^3.0.1"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "lint-staged": {
    "*.{js,less}": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 Chrome major versions",
    "last 2 Firefox major versions",
    "last 2 Edge major versions",
    "last 2 Safari major versions",
    "ie >= 11",
    "last 2 Android major versions",
    "last 2 ChromeAndroid major versions",
    "last 3 iOS major versions",
    "not op_mini all"
  ]
}
